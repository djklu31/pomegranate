{
  "manifest_version": 2,
  "name": "Pomegranate",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/js/content.js"]
    }
  ],
  "browser_action": {
    "default_title": "Pomegranate",
    "default_popup": "/html/popup.html"
  },
  "background": {
    "scripts": ["/js/background.js"]
  },
  "permissions": ["storage", "tabs", "notifications"],
  "web_accessible_resources": [
    "/html/pageBlocked.html",
    "/html/breakNotifPage.html"
  ]
}
