{
  "manifest_version": 3,
  "name": "Pomegranate",
  "version": "1.17",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/js/content.js"],
      "run_at": "document_start"
    }
  ],
  "action": {
    "default_title": "Pomegranate",
    "default_popup": "/html/popup.html"
  },
  "background": {
    "service_worker": "/js/background.js"
  },
  "icons": {
    "16": "/img/pom-16.png",
    "48": "/img/pom-48.png",
    "128": "/img/pom-128.png"
  },
  "permissions": ["storage", "tabs", "notifications", "webNavigation"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": [
        "/html/pageBlocked.html",
        "/html/breakNotifPage.html",
        "/lib/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
